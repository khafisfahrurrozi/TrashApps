<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/sellrubbistmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellRubbist">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0c5c44"
                android:text="Take a Photo"
                android:paddingBottom="10dp"
                android:fontFamily="@font/baloo"/>


            </LinearLayout>

        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
        <ImageButton
            android:layout_width="60dp"
            android:id="@+id/camera"
            android:layout_height="50dp"
            android:background="@drawable/upload"
            android:src="@drawable/ic_upload_photo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="40dp">
        <ImageButton

            android:background="@drawable/upload"
            android:src="@drawable/ic_photo"
            android:layout_width="60dp"
            android:id="@+id/gallery"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="30dp">
            <ImageView

                android:layout_gravity="center_horizontal"
                android:id="@+id/image_view"
                android:paddingTop="20dp"
                android:layout_width="180dp"
                android:layout_height="180dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#0c5c44"
                android:text="Type Of Trash"
                android:paddingBottom="10dp"
                android:fontFamily="@font/baloo"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <CheckBox

                        android:theme="@style/AppTheme."
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/household"
                        android:button="@drawable/household"
                        android:background="@drawable/trash_margin"/>
                    <TextView
                        android:fontFamily="@font/baloo"
                        android:textColor="#0c5c44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Household"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <CheckBox

                        android:id="@+id/organic"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:button="@drawable/organic"
                        android:background="@drawable/trash_margin"/>
                    <TextView
                        android:fontFamily="@font/baloo"
                        android:textColor="#0c5c44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Organic"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <CheckBox

                        android:id="@+id/automotive"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:button="@drawable/automotive"
                        android:background="@drawable/trash_margin"/>
                    <TextView
                        android:fontFamily="@font/baloo"
                        android:textColor="#0c5c44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Automotive"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <CheckBox

                        android:id="@+id/dangerous"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:button="@drawable/dangerous"
                        android:background="@drawable/trash_margin"/>
                    <TextView
                        android:fontFamily="@font/baloo"
                        android:textColor="#0c5c44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dangerous"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <CheckBox

                        android:id="@+id/liquid"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:button="@drawable/liquid"
                        android:background="@drawable/trash_margin"/>
                    <TextView
                        android:fontFamily="@font/baloo"
                        android:textColor="#0c5c44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Liquid"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <CheckBox
                        android:id="@+id/metal"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:button="@drawable/metal"
                        android:background="@drawable/trash_margin"/>
                    <TextView
                        android:fontFamily="@font/baloo"
                        android:textColor="#0c5c44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Metal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <CheckBox

                        android:id="@+id/glass"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:button="@drawable/glass"
                        android:background="@drawable/trash_margin"/>
                    <TextView
                        android:fontFamily="@font/baloo"
                        android:textColor="#0c5c44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Glass"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <CheckBox

                        android:id="@+id/contruction"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:button="@drawable/contruction"
                        android:background="@drawable/trash_margin"/>
                    <TextView
                        android:fontFamily="@font/baloo"
                        android:textColor="#0c5c44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contruction"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0c5c44"
                    android:text="Size Of Trash"
                    android:paddingBottom="10dp"
                    android:fontFamily="@font/baloo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:paddingLeft="50dp"
                    android:text="Weight (kg )"
                    android:fontFamily="@font/baloo"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <TextView
                    android:paddingTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#0c5c44"
                    android:text="Location"
                    android:paddingBottom="10dp"
                    android:fontFamily="@font/baloo"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="175dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="154dp"
                    android:src="@drawable/maps" />
                <!--                <WebView-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:id="@+id/webview"-->
                <!--                    />-->

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:gravity="center">
                <EditText
                    android:layout_width="300dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:id="@+id/maps"
                    android:hint="  Search"
                    android:paddingLeft="10dp"
                    android:textColor="#DDDDDD"
                    android:background="@drawable/shape_login"
                    />
                <ImageButton
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="#fff"
                    android:src="@drawable/ic_search_black_24dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/button_upload"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="16dp"
                    android:layout_alignParentLeft="true" />

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Send"
                    android:id="@+id/send"
                    android:textColor="#fff"
                    android:background="@drawable/shape"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>