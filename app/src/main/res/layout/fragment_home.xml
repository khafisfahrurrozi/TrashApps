<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="55dp"
                 android:text="Hai,User"
                 android:paddingLeft="10dp"
                 android:textColor="#0c5c44"
                 android:fontFamily="@font/baloo"
                 android:textSize="40sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Are you ready for save the world ?"
                android:textColor="#0c5c44"
                android:paddingLeft="10dp"
                android:fontFamily="@font/baloo"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/notif"
                android:background="#fff"
                android:src="@drawable/ic_notifications_black_24dp" />
        </LinearLayout>
        </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:paddingBottom="5dp"
                android:id="@+id/selltrash"
                android:src="@drawable/ic_selltrash" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sell Rubbist"
                android:textColor="#0c5c44"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <com.denzcoskun.imageslider.ImageSlider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:auto_cycle="true"
                android:padding="30dp"
                app:delay="0"
                android:id="@+id/slider"
                app:period="1000"
                app:error_image="@drawable/bg_grey"
                app:placeholder="@drawable/bg_grey"
                app:corner_radius="20"/>
        </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp">

                    <androidx.cardview.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true">
                            <TextView
                                android:id="@+id/title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginStart="86dp"
                                android:layout_marginLeft="86dp"
                                android:layout_marginBottom="10dp"
                                android:maxLines="3"
                                android:padding="8dp"
                                android:text="@string/title_plastic"
                                android:textColor="#222"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@+id/title"
                                android:layout_alignLeft="@+id/title"
                                android:layout_alignParentBottom="true"
                                android:maxLines="3"
                                android:padding="8dp"
                                android:text="@string/description_plastic"
                                android:textColor="#666" />
                            <ImageView
                                android:id="@+id/thumbnail"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_plastic_foreground" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:id="@+id/title_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="86dp"
                        android:layout_marginLeft="86dp"
                        android:layout_marginBottom="10dp"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="@string/title_plastic"
                        android:textColor="#222"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/title_2"
                        android:layout_alignLeft="@+id/title_2"
                        android:layout_alignParentBottom="true"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="@string/description_plastic"
                        android:textColor="#666" />
                    <ImageView
                        android:id="@+id/thumbnail_2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_plastic_foreground" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:id="@+id/title_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="86dp"
                        android:layout_marginLeft="86dp"
                        android:layout_marginBottom="10dp"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="@string/title_plastic"
                        android:textColor="#222"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/title_3"
                        android:layout_alignLeft="@+id/title_3"
                        android:layout_alignParentBottom="true"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="@string/description_plastic"
                        android:textColor="#666" />
                    <ImageView
                        android:id="@+id/thumbnail_3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_plastic_foreground" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:id="@+id/title_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="86dp"
                        android:layout_marginLeft="86dp"
                        android:layout_marginBottom="10dp"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="@string/title_plastic"
                        android:textColor="#222"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/title_1"
                        android:layout_alignLeft="@+id/title_1"
                        android:layout_alignParentBottom="true"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="@string/description_plastic"
                        android:textColor="#666" />
                    <ImageView
                        android:id="@+id/thumbnail_1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_plastic_foreground" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="67dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>